import pandas as pd

# 초기 데이터
data = {
    '이름': ['민수', '지영', '철수', '수진', '영희', '동현', '지훈', '예린'],
    '성별': ['남', '여', '남', '여', '여', '남', '남', '여'],
    '나이': [23, 21, 25, 22, 20, 24, 21, 23]
}

df = pd.DataFrame(data)
df


#Q, 다음 데이터에서 각 성별 그룹 중 평균 나이가 22세 이상인 그룹의 이름과 나이를 출력하세요
gender_age = df.groupby('성별')['나이'].mean().reset_index()

over_22_gender = gender_age[gender_age['나이'] >= 22]['성별']

df[df['성별'].isin(over_22_gender)][['이름', '나이']]
