import pandas as pd

data = {
    'Product': ['Apple', 'Banana', 'Apple', 'Orange', 'Banana', 'Apple'],
    'Quantity': [3, 2, 5, 4, 3, 2]
}

df = pd.DataFrame(data)
print(df)


#Q. 가장 많이 판매된 상품의 이름과 판매 수량을 출력하시오.
most_product = df.groupby('Product')['Quantity'].sum().idxmax()
most_quantity = df.groupby('Product')['Quantity'].sum().max()

print(most_product)
print(most_quantity)
