import pandas as pd

data = {
    'Customer': ['Alice', 'Bob', 'Charlie', 'Diana', 'Ethan', 'Fiona'],
    'City': ['Seoul', 'Busan', 'Seoul', 'Daegu', 'Busan', 'Seoul'],
    'Total': [100, 200, 150, 300, 250, 180]
}

df = pd.DataFrame(data)
print(df)

#Q. 각 도시에 대해 총 주문 금액(Total)을 계산하시오.
df.groupby('City')['Total'].sum()
