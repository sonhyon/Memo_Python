import pandas as pd
import numpy as np

data = {
    'Customer': ['Alice', 'Bob', 'Charlie', 'Diana', 'Ethan', 'Fiona', 'George', 'Helen'],
    'Age': [28, 34, 25, 40, 29, 30, 38, 22]
}

df = pd.DataFrame(data)
print(df)

#Q. 나이가 30세 이상인 고객을 ‘Senior’, 그렇지 않은 고객을 ‘Junior’로 구분한 후, 구분별 고객 수를 구하시오.

df['Category'] = np.where(df['Age'] >= 30, 'Senior', 'Junior')

result = df['Category'].value_counts()
print(result)
