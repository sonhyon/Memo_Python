import pandas as pd

# 초기 데이터 값
students = pd.DataFrame({
    'name': ['Alice', 'Bob', 'Charlie', 'David', 'Eva'],
    'math': [85, 92, 78, 88, 91],
    'english': [75, 85, 93, 80, 89],
    'korean': [88, 92, 84, 77, 93]
})

#Q. 평균 점수가 85점 이상인 학생들만 뽑아서, name과 avg만 출력하라. 평균 점수 기준으로 내림차순 정렬할 것.
students.query('avg >= 85')[['name', 'avg']].sort_values(by='avg', ascending=False)
