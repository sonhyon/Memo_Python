import pandas as pd

data = {
    '이름': ['민수', '지영', '철수', '수진', '영희', '동현', '지훈', '예린'],
    '지각': [2, 5, 1, 3, 0, 4, 2, 6],
    '결석': [4, 8, 3, 10, 2, 5, 6, 10]
}

df = pd.DataFrame(data)
print(df)

#Q, 지각 횟수가 전체 결석 횟수의 50% 이상인 학생의 이름과 지각, 결석 횟수를 출력하세요
condition = df['지각'] / df['결석'] >= 0.5
df[condition][['이름', '지각', '결석']]
